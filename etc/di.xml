    <preference for="Magento\InstantPurchase\PaymentMethodIntegration\AvailabilityCheckerInterface" type="Naxero\AdvancedInstantPurchase\Model\InstantPurchase\AvailabilityChecker" />
    <preference for="Magento\InstantPurchase\PaymentMethodIntegration\PaymentTokenFormatterInterface" type="Naxero\AdvancedInstantPurchase\Model\InstantPurchase\TokenFormatter" />
    <preference for="Magento\InstantPurchase\CustomerData\InstantPurchase" type="Naxero\AdvancedInstantPurchase\Model\InstantPurchase\CustomerData" />
    <!-- END Instant Purchase override -->

    <preference for="Magento\Customer\Controller\Address\FormPost" type="Naxero\AdvancedInstantPurchase\Controller\Address\FormPost" />
