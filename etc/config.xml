<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <advanced_instant_purchase>
            <general>
                <button_text>Buy Now</button_text>
                <enabled>1</enabled>
                <debug_enabled>0</debug_enabled>
                <console_logging_enabled>0</console_logging_enabled>
                <file_logging_enabled>0</file_logging_enabled>
                <enable_agreements>0</enable_agreements>
            </general>
            <display>
                <product_view>1</product_view>
                <product_list>1</product_list>
                <popup_responsive>1</popup_responsive>
                <popup_title>Advanced Instant Purchase</popup_title>
                <popup_product>1</popup_product>
                <popup_header_text>Please review the options and place your order.</popup_header_text>
                <popup_footer_text>Submitting this form will process a payment and place an order.</popup_footer_text>
            </display>
            <guest>
                <show_guest_button>1</show_guest_button>
                <guest_button_state>1</guest_button_state>
                <click_event>popup</click_event>
            </guest>
            <registered>
                <show_registered_button>1</show_registered_button>
                <bypass_missing_payment>1</bypass_missing_payment>
                <bypass_missing_billing>1</bypass_missing_billing>
                <bypass_missing_shipping>1</bypass_missing_shipping>
            </registered>
            <card_form>
                <load><![CDATA[<h1>load</h1><script>alert("card form script")</script>]]></load>
            </card_form>
        </advanced_instant_purchase> 
    </default>
</config>