<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget ttl="0" class="Naxero\BuyNow\Block\Button\WidgetButton" id="nbn_product_widget">
        <label>Naxero Buy Now Widget</label>
        <description>Naxero Buy Now Widget</description>
        <parameters>
            <!-- CSS assets-->
            <parameter name="group_css" xsi:type="block" visible="false">
                <block class="Naxero\BuyNow\Block\Adminhtml\Widget\Form\Assets\CssLoader"/>
            </parameter>

            <!-- General settings-->
            <parameter name="group_general" xsi:type="block" visible="true">
                <block class="Naxero\BuyNow\Block\Adminhtml\Widget\Form\GroupSeparator">
                    <data>
                        <item name="text" xsi:type="string" translate="true">General settings</item>
                    </data>
                </block>
            </parameter>

            <parameter name="product_selection_mode" xsi:type="select" visible="true" source_model="Naxero\BuyNow\Model\Config\Backend\Source\ProductSelectionMode">
                <label translate="true">Product selection mode</label>
            </parameter>

            <parameter name="category_id" xsi:type="block" visible="true">
                <label translate="true">Category</label>
                <block class="Naxero\BuyNow\Block\Adminhtml\Widget\Form\CategorySelector"/>
            </parameter>

            <parameter name="product_id" xsi:type="select" visible="true">
                <label translate="true">Product</label>
                <depends>
                    <parameter name="product_selection_mode" value="product" />
                </depends>
            </parameter>

            <parameter name="product_filter" xsi:type="select" visible="true" source_model="Naxero\BuyNow\Model\Config\Backend\Source\ProductFilterSelector">
                <label translate="true">Product filter</label>
                <depends>
                    <parameter name="product_selection_mode" value="category" />
                </depends>
            </parameter>

            <!-- Button settings -->
            <parameter name="group_buttons" xsi:type="block" visible="true">
                <block class="Naxero\BuyNow\Block\Adminhtml\Widget\Form\GroupSeparator">
                    <data>
                        <item name="text" xsi:type="string" translate="true">Button settings</item>
                    </data>
                </block>
            </parameter>
            <parameter name="button_text" xsi:type="text" visible="true">
                <label translate="true">Button text</label>
                <value translate="true">Buy Now</value>
            </parameter>
            <parameter name="show_guest_button" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Show guest button</label>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>
            <parameter name="guest_button_text" xsi:type="text" visible="true">
                <label translate="true">Guest button text</label>
                <depends>
                    <parameter name="show_guest_button" value="1" />
                </depends>
                <value translate="true">Buy Now</value>
            </parameter>

            <parameter name="product_tree_filter" xsi:type="select" visible="true" source_model="Naxero\BuyNow\Model\Config\Backend\Source\ProductTreeFilter">
                <label translate="true">Product tree filter</label>
            </parameter>

            <parameter name="customer_groups" xsi:type="multiselect" visible="true" source_model="Naxero\BuyNow\Model\Config\Backend\Source\CustomerGroup">
                <label translate="true">Customer groups</label>
            </parameter>

            <parameter name="bypass_oos" xsi:type="select" visible="true">
                <label translate="true">Bypass out of stock</label>
                <options>
                    <option name="yes" value="1">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0" selected="true">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>

            <parameter name="button_classes" xsi:type="text" visible="true">
                <label translate="true">Button classes</label>
                <value>primary button</value>
            </parameter>

            <!-- Widget settings -->
            <parameter name="group_widgets" xsi:type="block" visible="true">
                <block class="Naxero\BuyNow\Block\Adminhtml\Widget\Form\GroupSeparator">
                    <data>
                        <item name="text" xsi:type="string" translate="true">Widget settings</item>
                    </data>
                </block>
            </parameter>
            <parameter name="widget_show_product" xsi:type="select" visible="true">
                <label translate="true">Show product</label>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>
            <parameter name="widget_show_product_name" xsi:type="select" visible="true">
                <label translate="true">Show product name</label>
                <depends>
                    <parameter name="widget_show_product" value="1" />
                </depends>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>
            <parameter name="widget_show_product_price" xsi:type="select" visible="true">
                <label translate="true">Show product price</label>
                <depends>
                    <parameter name="widget_show_product" value="1" />
                </depends>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>
            <parameter name="widget_show_product_quantity" xsi:type="select" visible="true">
                <label translate="true">Show product quantity</label>
                <depends>
                    <parameter name="widget_show_product" value="1" />
                </depends>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>

            <parameter name="widget_show_product_image" xsi:type="select" visible="true">
                <label translate="true">Show product image</label>
                <depends>
                    <parameter name="widget_show_product" value="1" />
                </depends>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>

            <parameter name="widget_image_width" xsi:type="text" visible="true">
                <label translate="true">Image width</label>
                <depends>
                    <parameter name="widget_show_product_image" value="1" />
                </depends>
                <value>30%</value>
            </parameter>

            <parameter name="widget_zoom_enabled" xsi:type="select" visible="true">
                <label translate="true">Zoom enabled</label>
                <depends>
                    <parameter name="widget_show_product_image" value="1" />
                </depends>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>

            <parameter name="widget_zoom_type" xsi:type="select" visible="true" source_model="Naxero\BuyNow\Model\Config\Backend\Source\ZoomType">
                <label translate="true">Zoom type</label>
                <depends>
                    <parameter name="widget_show_product_image" value="1" />
                    <parameter name="widget_zoom_enabled" value="1"/>
                </depends>
            </parameter>

            <!-- Popup settings -->
            <parameter name="group_popups" xsi:type="block" visible="true">
                <block class="Naxero\BuyNow\Block\Adminhtml\Widget\Form\GroupSeparator">
                    <data>
                        <item name="text" xsi:type="string" translate="true">Popup settings</item>
                    </data>
                </block>
            </parameter>
            <parameter name="popup_enable_agreements" xsi:type="select" visible="true">
                <label translate="true">Enable terms and conditions</label>
                <options>
                    <option name="yes" value="1">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0" selected="true">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>
            <parameter name="popup_responsive" xsi:type="select" visible="true">
                <label translate="true">Responsive</label>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>
            <parameter name="popup_title" xsi:type="text" visible="true">
                <label translate="true">Popup title</label>
                <value translate="true">Buy Now</value>
            </parameter>
            <parameter name="popup_header_text" xsi:type="text" visible="true">
                <label translate="true">Popup header text</label>
                <value translate="true">Please review the options and place your order.</value>
            </parameter>
            <parameter name="popup_footer_text" xsi:type="text" visible="true">
                <label translate="true">Popup footer text</label>
                <value translate="true">Submitting this form will process a payment and place an order.</value>
            </parameter>
            <parameter name="popup_confirm_button_text" xsi:type="text" visible="true">
                <label translate="true">Place order button text</label>
                <value translate="true">Place order</value>
            </parameter>
            <parameter name="popup_show_product" xsi:type="select" visible="true">
                <label translate="true">Show product</label>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>                
            </parameter>
            <parameter name="popup_show_product_image" xsi:type="select" visible="true">
                <label translate="true">Show product image</label>
                <depends>
                    <parameter name="popup_show_product" value="1" />
                </depends>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>
            <parameter name="popup_show_product_name" xsi:type="select" visible="true">
                <label translate="true">Show product name</label>
                <depends>
                    <parameter name="popup_show_product" value="1" />
                </depends>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>
            <parameter name="popup_show_product_price" xsi:type="select" visible="true">
                <label translate="true">Show product price</label>
                <depends>
                    <parameter name="popup_show_product" value="1" />
                </depends>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>
            <parameter name="popup_show_product_quantity" xsi:type="select" visible="true">
                <label translate="true">Show product quantity</label>
                <depends>
                    <parameter name="popup_show_product" value="1" />
                </depends>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>

            <!-- Debug settings-->
            <parameter name="group_debug" xsi:type="block" visible="true">
                <block class="Naxero\BuyNow\Block\Adminhtml\Widget\Form\GroupSeparator">
                    <data>
                        <item name="text" xsi:type="string" translate="true">Debug settings</item>
                    </data>
                </block>
            </parameter>
            <parameter name="debug_enabled" xsi:type="select" visible="true">
                <label translate="true">Debug enabled</label>
                <options>
                    <option name="yes" value="1">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0" selected="true">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>
            <parameter name="ui_logging_enabled" xsi:type="select" visible="true">
                <label translate="true">UI logging enabled</label>
                <depends>
                    <parameter name="debug_enabled" value="1" />
                </depends>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>
            <parameter name="console_logging_enabled" xsi:type="select" visible="true">
                <label translate="true">Console logging enabled</label>
                <depends>
                    <parameter name="debug_enabled" value="1" />
                </depends>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>
            <parameter name="file_logging_enabled" xsi:type="select" visible="true">
                <label translate="true">File logging enabled</label>
                <depends>
                    <parameter name="debug_enabled" value="1" />
                </depends>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>

            <!-- JS assets-->
            <parameter name="group_js" xsi:type="block" visible="false">
                <block class="Naxero\BuyNow\Block\Adminhtml\Widget\Form\Assets\JsLoader"/>
            </parameter>
        </parameters>
    </widget>
</widgets>
