<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="Naxero\BuyNow\Block\Button\WidgetButton" id="HostAdvice_customwidget_samplewidget">
        <label>Naxero Buy Now Widget</label>
        <description>Naxero Buy Now Widget</description>
        <parameters>
            <!-- General settings-->
            <parameter name="group_general" xsi:type="block" visible="true">
                <block class="\Naxero\BuyNow\Block\Adminhtml\Widget\Form\GroupSeparator">
                    <data>
                        <item name="text" xsi:type="string" translate="true">General settings</item>
                    </data>
                </block>
            </parameter>
            <parameter name="product_id" xsi:type="select" visible="true" required="true" source_model="Naxero\BuyNow\Model\Config\Backend\Source\ProductList">
                <label translate="true">Product</label>
            </parameter>
            <parameter name="enable_agreements" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Enable terms and conditions</label>
            </parameter>

            <!-- Button settings -->
            <parameter name="group_buttons" xsi:type="block" visible="true">
                <block class="\Naxero\BuyNow\Block\Adminhtml\Widget\Form\GroupSeparator">
                    <data>
                        <item name="text" xsi:type="string" translate="true">General settings</item>
                    </data>
                </block>
            </parameter>
            <parameter name="button_text" xsi:type="text" visible="true" required="true">
                <label translate="true">Button text</label>
                <value>Buy Now</value>
            </parameter>
            <parameter name="show_guest_button" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Show guest button</label>
                <value>1</value>
            </parameter>
            <parameter name="guest_button_text" xsi:type="text" visible="true" required="true">
                <label translate="true">Guest button text</label>
                <value>Buy Now</value>
                <depends>
                    <parameter name="show_guest_button" value="1" />
                </depends>
            </parameter>
            <parameter name="bypass_oos" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Bypass out of stock</label>
                <value>0</value>
            </parameter>
            <parameter name="button_classes" xsi:type="text" visible="true" required="true">
                <label translate="true">Button classes</label>
                <value>primary button</value>
            </parameter>

            <!-- Widget settings -->

            <!-- Button settings -->


            <!-- Debug settings-->
            <parameter name="group_debug" xsi:type="block" visible="true">
                <block class="\Naxero\BuyNow\Block\Adminhtml\Widget\Form\GroupSeparator">
                    <data>
                        <item name="text" xsi:type="string" translate="true">Debug settings</item>
                    </data>
                </block>
            </parameter>
            <parameter name="debug_enabled" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Debug enabled</label>
                <value>0</value>
            </parameter>
            <parameter name="ui_logging_enabled" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">UI logging enabled</label>
                <value>1</value>
                <depends>
                    <parameter name="debug_enabled" value="1" />
                </depends>
            </parameter>
            <parameter name="console_logging_enabled" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Console logging enabled</label>
                <value>1</value>
                <depends>
                    <parameter name="debug_enabled" value="1" />
                </depends>
            </parameter>
            <parameter name="file_logging_enabled" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">File logging enabled</label>
                <value>1</value>
                <depends>
                    <parameter name="debug_enabled" value="1" />
                </depends>
            </parameter>
            
        </parameters>
    </widget>
</widgets>
