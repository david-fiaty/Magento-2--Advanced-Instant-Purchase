<!-- Category list selector -->
<div>
    <label class="label admin__field-label" for="<?= $element->getId() ?>">
        <span><?= __('Select a category') ?></span>
    </label>
    <select id="<?= $element->getId() ?>" name="<?= $element->getName() ?>">
    <?php foreach ($categories as $category): ?>
        <option class="nbn-category-select-level-<?= $category['level'] ?>" value="<?= $category['id'] ?>" <?= $category['id'] == $element->getValue() ? 'selected' : '' ?>>
            <?php
                for ($i = 0; $i < (int) $category['level']; $i++) {
                    if ($i >= 0) echo '-';
                }
            ?>
            <?= $category['name'] ?>
        </option>
    <?php endforeach; ?>
    </select>
</div>

<!-- Select 2 script -->
<script>
    require([
        'jquery',
        'mage/translate',
        'select2',
        'domReady!'
], function($, __, select2) {
    'use strict';

    // Category selector select
    $('<?= $element->getId() ?>').select2({
        placeholder: __('Filter by category'),
        theme: 'classic',
        templateResult: function (data) { 
            // Hierarchical display for sub categories
            if (!data.element) {
                return data.text;
            }
            var $element = $(data.element);
            var $wrapper = $('<span></span>');
            $wrapper.addClass($element[0].className);
            $wrapper.text(data.text);

            return $wrapper;
        }
    });    

    // Category selector change event
    $('<?= $element->getId() ?>').on('change', function() {
        // Prepare the parameters
        var updateUrl = '<?= $block->escapeUrl($block->getUrl('naxero-buynow/widget/form')); ?>';
        var data = {
            category_id: $(this).val(),
            form_key: window.FORM_KEY
        };

        // Ajax request
        $.ajax({
            url: updateUrl,
            data: data,
            type: 'post',
            dataType: 'json',
            success: function (data) {
                $('#<?= $element->getId() ?>').empty().html(data.html);
            },
            error: function (request, status, error) {
                console.log(error);
            }
        });
    });
});
</script>