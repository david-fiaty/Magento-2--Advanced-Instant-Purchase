<?php
// Get the block data
$element = $block->getData('element');
$products = $block->getData('products');
?>

<!-- Product list selector -->
<div>
    <select id="<?= $element->getId() ?>" name="<?= $element->getName() ?>">
    <?php foreach ($products as $product): ?>
        <option value="<?= $product['value'] ?>" <?= $product['value'] == $element->getValue() ? 'selected' : '' ?>>
            <?= $product['label'] ?>
        </option>
    <?php endforeach; ?>
    </select>
    <input type="hidden" id="nbn-product-selector" name="nbn-product-selector" value="<?= $element->getId() ?>">
</div>

<!-- Select 2 script -->
<script>
    require([
        'jquery',
        'mage/translate',
        'select2',
        'domReady!'
], function($, __, select2) {
    'use strict';

    // Product selector
    $('#<?= $element->getId() ?>').select2({
        placeholder: __('Select an option'),
        theme: 'classic'
    });

    // Initial display state
    var parentSelect = $('#' + $('#nbn-product-selection-mode').val());
    if (parentSelect.val() != 'product') {
        $('#<?= $element->getId() ?>').css('display', 'none');
    }
});
</script>