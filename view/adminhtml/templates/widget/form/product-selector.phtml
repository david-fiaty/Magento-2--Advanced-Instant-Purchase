// Get the block data
$elementId = $block->getData('element_id');
$elementLabel = $block->getData('element_label');
$elementName = $block->getData('element_name');
$elementValue = $block->getData('element_value');
$products = $block->getData('product_list');
$categories = $block->getData('category_list');

?>

<!-- Select 2 CSS -->
<!-- Todo - Move to local -->
