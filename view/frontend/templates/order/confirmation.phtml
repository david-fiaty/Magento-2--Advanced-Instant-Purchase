<script>
require([
    'jquery',
    'mage/translate',
    'Naxero_BuyNow/js/view/helpers/paths',
    'Naxero_BuyNow/js/view/helpers/util',
    'domReady!'
], function($, __, NbnPaths, NbnUtil) {
    'use strict';

    var productId = <?= $productId ?>;
    var productQantity = <?= $productQantity ?>;

    // Shipping method change event
    $('#nbn-shipping-method-select').on('change', function(e) {
        // Prepare the parameters
        var params = {
            product_id: productId,
            product_quantity: productQantity,
            carrier_code: $(e.currentTarget).val(),
            coupon_code: $('#nbn-coupon-code').val(),
            form_key: $(this.formKeySelectorPrefix + productId).val()
        };

        // Update the totals
        updateTotals(params);
    });

    // Discount code submit event
    $('.nbn-coupon-box button').on('click touch', function(e) {
        // Prepare the parameters
        var params = {
            product_id: productId,
            product_quantity: productQantity,
            carrier_code: $('#nbn-shipping-method-select').val(),
            coupon_code: $('#nbn-coupon-code').val(),
            form_key: $(this.formKeySelectorPrefix + productId).val()
        };

        // Update the totals
        updateTotals(params);
    });

    function updateTotals(params) {
       // Send the update request
       $.ajax({
            type: 'POST',
            url: NbnPaths.get('order/total'),
            data: params,
            success: function (res) {
                // Base total display
                $('.nbn-summary-shipping').html(res.data.shipping.rendered);
                $('.nbn-summary-total').html(res.data.total.rendered);

                // Discount display
                if (NbnUtil.has(res, 'data.discount.id') && parseInt(res.data.discount.id) > 0) {
                    $('#nbn-discount-row').show();
                    $('.nbn-discounted-amount').html('-' + res.data.discount.rendered);
                    $('#nbn-coupon-code').prop('disabled', true);
                }
            },
            error: function (request, status, error) {
                console.log(
                    __('Error retrieving the updated shipping data'),
                    error
                );
            }
        });
    }
});
</script>